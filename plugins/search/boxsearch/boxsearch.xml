     <authorUrl>www.cohesivewebsites.com</authorUrl>
     <version>1.0</version>
     <description>MOD_FOOTER_XML_DESCRIPTION</description>
     <files>
          <filename plugin="content">boxsearch.php</filename>
     </files>
     <config>
          <fields name="params">

               <fieldset name="basic">
                    <field name="search_limit" type="text"
                         default="50"
                         description="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_DESC"
                         label="PLG_SEARCH_CONTENT_FIELD_SEARCHLIMIT_LABEL"
                         size="5"
                    />
               </fieldset>

          </fields>
